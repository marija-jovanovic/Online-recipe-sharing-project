@using Microsoft.AspNetCore.Identity;
@model IEnumerable<Recepti.Models.KorisnikRecepti>
@using Recepti.Areas.Identity.Data

@inject SignInManager<ReceptiUser> SignInManager
@inject UserManager<ReceptiUser> UserManager

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.korisnickoIme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceptiId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            @if (item.korisnickoIme == @UserManager.GetUserName(User))
            {
                <tr>
                    <td>
                @Html.DisplayFor(modelItem => item.korisnickoIme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceptiId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
}
    </tbody>
</table>
