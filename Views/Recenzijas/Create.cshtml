@model Recepti.Models.Recenzija

@{
    ViewData["Title"] = "Create";
}
<body style="background-image: url(https://images4.alphacoders.com/127/1275718.jpg);  background-repeat: no-repeat">
<h1>Create</h1>

<h4>Recenzija</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Korisnik" class="control-label"></label>
                <input asp-for="Korisnik" class="form-control" />
                <span asp-validation-for="Korisnik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Komentar" class="control-label"></label>
                <input asp-for="Komentar" class="form-control" />
                <span asp-validation-for="Komentar" class="text-danger"></span>
            </div>
            <div class="form-group">
                Vnesete ocena vo opseg [1, 10]
                <label asp-for="Ocena" class="control-label"></label>
                <input asp-for="Ocena" class="form-control" min = "1" max="10"/>
                <span asp-validation-for="Ocena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceptId" class="control-label"></label>
                <select asp-for="ReceptId" class ="form-control" asp-items="ViewBag.ReceptId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
